{
  "manifest_version": 3,
  "name": "MarkMyRead",
  "version": "2.0",
  "description": "Track the read status of blogs",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Mark My Read"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["lists.html"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  }
}